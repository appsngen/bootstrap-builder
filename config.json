{
    "variablesPath": "theme/less/variables.less",
    "Mixins": {
        // Utilities
        "hide-text.less": true,
        "opacity.less": true,
        "image.less": true,
        "labels.less": true,
        "reset-filter.less": true,
        "resize.less": true,
        "responsive-visibility.less": true,
        "size.less": true,
        "tab-focus.less": true,
        "text-emphasis.less": true,
        "text-overflow.less": true,
        "vendor-prefixes.less": true,

        // Components
        "alerts.less": true,
        "buttons.less": true,
        "panels.less": true,
        "pagination.less": true,
        "list-group.less": true,
        "nav-divider.less": true,
        "forms.less": true,
        "progress-bar.less": true,
        "table-row.less": true,

        // Skins
        "background-variant.less": true,
        "border-radius.less": true,
        "gradients.less": true,

        // Layout
        "clearfix.less": true,
        "center-block.less": true,
        "nav-vertical-align.less": true,
        "grid-framework.less": true,
        "grid.less": true
    },
    "Bootsrap":{
        // Reset and dependencies
        "normalize.less": true,
        "print.less": true,
        "glyphicons.less": true,

        // Core CSS
        "scaffolding.less": true,
        "type.less": true,
        "code.less": true,
        "grid.less": true,
        "tables.less": true,
        "forms.less": true,
        "buttons.less": true,

        // Components
        "component-animations.less": false,
        "dropdowns.less": true,     
        "button-groups.less": false,
        "input-groups.less": false,
        "navs.less": false,     // required for widgets
        "navbar.less": false,     // required for widgets
        "breadcrumbs.less": false,
        "pagination.less": false,
        "pager.less": false,
        "labels.less": false,
        "badges.less": false,
        "jumbotron.less": false,
        "thumbnails.less": false,
        "alerts.less": false,
        "progress-bars.less": false,
        "media.less": false,
        "list-group.less": false,
        "panels.less": false,
        "responsive-embed.less": false,
        "wells.less": false,
        "close.less": false,     // required for widgets

        // Components JavaScript
        "modals.less": true,
        "tooltip.less": true,
        "popovers.less": true,
        "carousel.less": true,

        // Utility classes
        "utilities.less": true,
        "responsive-utilities.less": true
    },
    "AppsNgenExtensions": {
        "scrollable-table.less": true,     // required for widgets
        "scrollable-container.less": false,     // required for widgets
        "jquery-jscrollpane.less": true,     // required for widgets
        "waiting.less": true,     // required for widgets
        "errors.less": true,                 // required for widgets
        "quotes.less": true
    },
    "themePath": "theme/less/theme.less",
    "compress":false,
    "restServicesUrls": {
        "tokenService": {
            "host": "www.appsngen.com",
            "path": "/auth-service/tokens"
        },
        "preferencesService": {
            "host": "www.appsngen.com",
            "path": "/rest-services/preferences/global?view=general&organizationId="
        }
    },
    "user" : {
        "password": "",
        "name" : ""
    },
    "organizationId": ""
}
